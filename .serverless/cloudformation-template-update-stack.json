      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "ConnectHandlerLambdaFunction",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "apigateway.amazonaws.com"
      }
    },
    "DisconnectHandlerLambdaPermissionWebsockets": {
      "Type": "AWS::Lambda::Permission",
